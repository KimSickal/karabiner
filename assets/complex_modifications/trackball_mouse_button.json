{
  "title": "Mouse 3/4/5 to websurfing",
  "rules": [
    {
      "description": "Change button4, 5 to backward, forward if Safari",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.finder$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "close_bracket",
              "modifiers": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.finder$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Button3 to flag on, double click to close",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouseDelayedModifier",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "mouseModifier",
                "value": 1
              }
            },
            {
              "set_variable": {
                "name": "mouseDelayedModifier",
                "value": 1
              }
            },
            {
              "pointing_button": "button3"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "mouseDelayedModifier",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "mouseDelayedModifier",
                  "value": 0
                }
              }
            ]
          },
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "mouseModifier",
                "value": 0
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Button3+4, 3+5 to switch",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouseModifier",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouseModifier",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
